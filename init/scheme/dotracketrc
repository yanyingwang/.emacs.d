;; please run below with shell terminal first:
;; raco pkg install xrepl ansi-color

(require xrepl)
(require ansi-color)


(parameterize ([foreground-color 'b-red])
  (color-display "\n Happy "))

(parameterize ([foreground-color 'blue])
  (color-display "Hacking "))

(parameterize ([foreground-color 'green])
  (color-display (string-titlecase (getenv "USER"))))

(parameterize ([foreground-color 'yellow])
  (color-display " - "))

(parameterize ([foreground-color 'cyan])
  (color-display "Racket"))

(parameterize ([foreground-color 'magenta])
  (color-display " â™¥ "))

(parameterize ([foreground-color 'b-magenta])
  (color-display "You"))

(parameterize ([foreground-color 'red])
  (color-display " !!!\n\n"))
