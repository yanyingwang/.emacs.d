;;;; raco pkg install colorize
(require colorize
         racket/string)

(displayln @~a{

               @(string-join `(,(colorize "-=>>" 'light-green)
                               ,(colorize "Happy" 'light-red)
                               ,(colorize "Hacking" 'cyan)
                               ,(colorize (string-titlecase (getenv "USER")) 'green)
                               "-"
                               ,(colorize "Racket" 'red)
                               ,(colorize "REPL" 'blue)
                               ,(colorize "â™¥ " 'magenta)
                               ,(colorize "You" 'light-magenta)
                               ,(colorize "!!!" 'red))
                             " ")

               })
